<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddReminderFragment">

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Add a New Reminder"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/newReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/addReminderTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="text"
            android:hint="Reminder Title" />

        <EditText
            android:id="@+id/addReminderTime"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="time"
            android:hint="Reminder Time"/>

        <EditText
            android:id="@+id/addReminderDay"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="text"
            android:hint="Reminder Day" />

        <EditText
            android:id="@+id/addReminderLocation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="text"
            android:hint="Reminder Location" />

        <Button
            android:id="@+id/addReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Reminder" />
    </LinearLayout>

</FrameLayout>
